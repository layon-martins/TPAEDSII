//Colocar no tad indice invertido.c
//Verificar se o termo se encontra no documento com tal idDoc
short VerificaId(Lista_Indice ListaId, int IdDoc){
    if (ListaId->idDocumento==IdDoc)return 1;
    else if (ListaId->idDocumento<IdDoc)VerificaId(ListaId->proximo, int IdDoc);
    else return 0;
}
//Colocar no tad indice invertido.h
short VerificaId(Lista_Indice ListaId, int IdDoc);

//Colocar no tad Patricia.c
int qtdTermosTexto(Aptd_Pat A, int idDoc){
    if (A->nt==Externo)return VerificaId(&(*A)->NO.NoExterno.listaIndiceInvertido,IdDoc);
    return qtdTermosTexto(&(*A)->NO.NInterno.Dir, int idDoc)+qtdTermosTexto(&(*A)->NO.NInterno.Esq, int idDoc);
}
//Colocar no tad Patricia.h
int qtdTermosTexto(Aptd_Pat A, int idDoc);
